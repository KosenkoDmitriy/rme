<% content_for :lsidebar do %>
    <div data-hook="homepage_sidebar_navigation">
      <%= render :partial => 'spree/shared/taxonomies' %>
    </div>
<% end %>

<div data-hook="homepage_products">

  <div id="product_details">
    <%= render :partial => 'spree/products/product_details' %>
  </div>

  <% cache(cache_key_for_products) do %>
      <%= render :partial => 'spree/products/products', :locals => {:products => @products} %>
  <% end %>
</div>


<% content_for :rsidebar do %>
    <div class="row">
      <%= render :partial => 'spree/shared/search_by_sku' %>

      <%= render :partial => 'spree/products/product_selected' %>

      <%= render :partial => 'spree/products/products_liked' %>
    </div>
<% end %>